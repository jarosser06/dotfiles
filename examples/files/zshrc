# Example .zshrc for dotfiles v2
# This file demonstrates the new framework - stored without "." prefix

export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"

plugins=(git brew docker)

source $ZSH/oh-my-zsh.sh

# Custom aliases
alias ll='ls -la'
alias ..='cd ..'
alias ...='cd ../..'

# Custom exports
export EDITOR=nvim
export PATH="$HOME/.local/bin:$PATH"

echo "âœ… Loaded dotfiles v2 zshrc"